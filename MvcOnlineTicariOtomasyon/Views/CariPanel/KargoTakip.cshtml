

@********************************************** CARİ KARGO TAKİP ********************************************@


<!--Sınıflara ulaşabilmek için bunu ekledik.-->
@using MvcOnlineTicariOtomasyon.Models.Siniflar
<!--Hangi sınıfı çağıracağımızı söyledik.-->
@model List<KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
<h2>Kargolar</h2>
<br />
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{ 
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>TAKİP KODU</th>
            <th>TARİH</th>
            <th>ALICI</th>
            <th>PERSONEL</th>
            <th>DETAYLAR</th>
        </tr>
    </thead>
    <!--4 parametre yazacağız içine. 1.si değişkenin türü,2.değişken ismi, 3. in(içinden), 4. değişkeni alacağımız yer-->
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.TakipKodu</td>
            <td>@Convert.ToDateTime(d.Tarih).ToString("dd/MM/yyyy")</td>
            <td>@d.Alici</td>
            <td>@d.Personel</td>
            <td>
                <a href="/CariPanel/CariKargoTakip/@d.TakipKodu" class="btn btn-group" style="background-color:limegreen; color: white"> Detaylar</a>
            </td>
        </tr>
    }
</table>
