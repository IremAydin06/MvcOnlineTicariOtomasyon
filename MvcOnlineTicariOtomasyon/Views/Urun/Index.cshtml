

@********************************************** ÜRÜN INDEX ********************************************@


@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<a href="/Urun/YeniUrun" class="btn btn-info btn-block">Ürün Ekle</a>
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>ÜRÜN</th>
            <th>MARKA</th>
            <th>STOK</th>
            <th>ALIŞ FİYAT</th>
            <th>SATIŞ FİYAT</th>
            <th>KATEGORİ</th>
            <th>GÖRSEL</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>SATIŞ YAP</th>
        </tr>
    </thead>
    <!--4 parametre yazacağız içine. 1.si değişkenin türü,2.değişken ismi, 3. in(içinden), 4. değişkeni nereden alacağımız-->
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Urunid</td>
            <td>@u.UrunAd</td>
            <td>@u.Marka</td>
            <td>@u.Stok</td>
            <td>@u.AlisFiyat</td>
            <td>@u.SatisFiyat</td>
            <td>@u.Kategori.KategoriAd</td>
            <td><img src="@u.UrunGorsel" style="width:100px; height:100px;" /></td>
            <td>
                <a href="/Urun/UrunSil/@u.Urunid" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Urun/UrunGetir/@u.Urunid" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Urun/SatisYap/@u.Urunid" class="btn btn-default" style="background-color:limegreen; color: white">Satış Yap</a>
            </td>
        </tr>
    }
</table>
@*<a href="/Urun/YeniUrun" class="btn btn-primary">Yeni Ürün</a>*@

