

@********************************************** KARGO INDEX ********************************************@


<!--Sınıflara ulaşabilmek için bunu ekledik.-->
@using MvcOnlineTicariOtomasyon.Models.Siniflar
<!--Hangi sınıfı çağıracağımızı söyledik.-->
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Kargolar</h2>
<br />
<a href="/Kargo/KargoEkle" class="btn btn-info btn-block">Yeni Kargo Girişi</a>
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>TAKİP KODU</th>
            <th>TARİH</th>
            <th>ALICI</th>
            <th>PERSONEL</th>
            @*<th>SİL</th>
            <th>GÜNCELLE</th>*@
            <th>DETAYLAR</th>
        </tr>
    </thead>
    <!--4 parametre yazacağız içine. 1.si değişkenin türü,2.değişken ismi, 3. in(içinden), 4. değişkeni alacağımız yer-->
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.TakipKodu</td>
            <td>@Convert.ToDateTime(d.Tarih).ToString("dd/MM/yyyy")</td>
            <td>@d.Alici</td>
            <td>@d.Personel</td>
            @*<td>
                <a href="/Departman/DepartmanSil/@d.Departmanid" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Departman/DepartmanGetir/@d.Departmanid" class="btn btn-warning">Güncelle</a>
            </td>*@
            <td>
                <a href="/Kargo/KargoTakip/@d.TakipKodu" class="btn btn-group" style="background-color:limegreen; color: white"> Detaylar</a>
            </td>
        </tr>
    }
</table>
