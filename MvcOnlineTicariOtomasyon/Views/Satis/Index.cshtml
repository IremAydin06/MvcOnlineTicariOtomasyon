

@********************************************** SATIŞ INDEX ********************************************@


@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<a href="/Satis/SatisEkle" class="btn btn-info btn-block">Yeni Satış Yap</a>
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>ÜRÜN</th>
            <th>GÖRSEL</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM TUTAR</th>
            <th>TARİH</th>
            @*<th>SİL</th>*@
            <th>GÜNCELLE</th>
            <th>DETAYLAR</th>
        </tr>
    </thead>
    <!--4 parametre yazacağız içine. 1.si değişkenin türü,2.değişken ismi, 3. in(içinden), 4. değişkeni alacağımız yer-->
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Satisid</td>
            <td>@s.Urun.UrunAd</td>
            <td><img src="@s.Urun.UrunGorsel" style="width:100px; height:100px;" /></td>
            <td>@s.Cariler.CariAd @s.Cariler.CariSoyad</td>
            <td>@s.Personel.PersonelAd @s.Personel.PersonelSoyad</td>
            <td>@s.Adet</td>
            <td>@s.Fiyat</td>
            <td>@s.ToplamTutar</td>
            <td>@Convert.ToDateTime(s.Tarih).ToString("dd/MM/yyyy")</td>
            @*<td>
                    <a href="/Personel/PersonelSil/@s.Personelid" class="btn btn-danger">Sil</a>
                </td>*@
            <td>
                <a href="/Satis/SatisGetir/@s.Satisid" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Satis/SatisDetay/@s.Satisid" class="btn btn-group" style="background-color:limegreen; color: white"> Detaylar</a>
            </td>
        </tr>
    }
</table>
@*<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>*@

