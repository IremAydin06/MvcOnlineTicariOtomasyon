

@********************************************** PERSONEL INDEX ********************************************@


@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<a href="/Personel/PersonelEkle" class="btn btn-info btn-block">Personel Ekle</a>
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>AD</th>
            <th>SOYAD</th>
            <th>GÖRSEL</th>
            <th>DEPARTMAN</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>SATIŞLAR</th>
        </tr>
    </thead>
    <!--4 parametre yazacağız içine. 1.si değişkenin türü,2.değişken ismi, 3. in(içinden), 4. değişkeni alacağımız yer-->
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Personelid</td>
            <td>@p.PersonelAd</td>
            <td>@p.PersonelSoyad</td>
            <td><img src="@p.PersonelGorsel" style="width:130px; height:80px;"/></td> @*Veriyi görsel olarak seçmek için img kullandık.*@
            <td>@p.Departman.DepartmanAd</td>
            <td>
                <a href="/Personel/PersonelSil/@p.Personelid" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Personel/PersonelGetir/@p.Personelid" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@p.Personelid" class="btn btn-group" style="background-color:limegreen; color: white"> Satışlar</a>
            </td>
        </tr>
    }
</table>
@*<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>*@

